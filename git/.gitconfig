[user]
  name = Felipe Alexandre Rodrigues
  email = felipear89@gmail.com

[color]
  diff = auto
  status = auto
  branch = auto
  ui = true

[alias]
  # branch
  b  = branch
  bc = checkout -b
  bl = branch -v
  bL = branch -av
  bx = branch -d
  bX = branch -D
  bm = branch -m
  bM = branch -M
  bs = show-branch
  bS = show-branch -a

  find = "!git ls-files | grep -i"

  # checkout/fetch/merge/push/rebase
  # checkout
  co  = checkout
  co0 = checkout HEAD --
  # fetch
  f   = fetch
  fm  = pull
  fo  = fetch origin
  # merge
  m   = merge
  mom = merge origin/master
  # push
  p   = push
  pa  = push --all
  pt  = push --tags
  # rebase
  r   = rebase
  ra  = rebase --abort
  rc  = rebase --continue
  ri  = rebase --interactive
  rs  = rebase --skip
  rom = rebase origin/master

  lasttag = describe --tags --abbrev=0
  lt = describe --tags --abbrev=0

  # commit
  c      = commit -v
  ca     = commit --all -v
  cm     = commit --message
  cam    = commit --all --message
  camend = commit --amend --reuse-message HEAD
  cundo  = reset --soft "HEAD^"
  cp     = cherry-pick

  # diff
  d    = diff          # Diff working dir to index
  ds   = diff --staged # Diff index to HEAD
  dc   = diff --staged # Diff index to HEAD
  dh   = diff HEAD     # Diff working dir and index to HEAD
  dl   = diff HEAD~1..HEAD
  dt   = difftool
  dtc  = difftool --cached
  dtn  = diff --name-only
  dw   = diff --color-words
  hub  = browse
  hubd = compare
  prior-hash      = "!ph() { git log --pretty=format:'%h' -1 --skip=$1 $2; }; ph"
  diff-prev-easy  = "!dp() { git diff $(git prior-hash $1 $2).. $2; }; dp"
  diff-prev       = "!dp() { git diff $(git prior-hash $1 $2)..$(git prior-hash $(($1 - 1)) $2) $2; }; dp"
  

  # index
  s  = status
  a  = add
  ia = add
  ir = reset

  # log
  l   = log --topo-order --pretty=format:'%C(yellow)%h %C(cyan)%cn %C(blue)%cr%C(reset) %s'
  ls  = log --topo-order --stat --pretty=format:'%C(bold)%C(yellow)Commit:%C(reset) %C(yellow)%H%C(red)%d%n%C(bold)%C(yellow)Author:%C(reset) %C(cyan)%an <%ae>%n%C(bold)%C(yellow)Date:%C(reset)   %C(blue)%ai (%ar)%C(reset)%n%+B'
  ld  = log --topo-order --stat --patch --full-diff --pretty=format:'%C(bold)%C(yellow)Commit:%C(reset) %C(yellow)%H%C(red)%d%n%C(bold)%C(yellow)Author:%C(reset) %C(cyan)%an <%ae>%n%C(bold)%C(yellow)Date:%C(reset)   %C(blue)%ai (%ar)%C(reset)%n%+B'
  lg  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lga = log --topo-order --all --graph --pretty=format:'%C(yellow)%h %C(cyan)%cn%C(reset) %s %C(red)%d%C(reset)%n'
  lm  = log --topo-order --pretty=format:'%s'
  lh  = shortlog --summary --numbered
  llf = fsck --lost-found

  lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all

  lastweek = log --author=Felipe --pretty=oneline --all --abbrev-commit --since=7.day

  # remote
  re  = remote
  rel = remote --verbose
  rea = remote add
  rex = remote rm
  rem = remote rename

  # cleanup
  cleanup-local = ! git branch --merged | grep -v "\\*" | grep -v master | xargs -n 1 git branch -d
  cleanup-remote = remote prune origin

  # status
  sb = status -sb

[branch]
  autosetuprebase = always

[push]
  default = current

[branch "master"]
  remote = origin
  merge = refs/heads/master

[push]
    default = matching
[core]
	excludesfile = /Users/frodr30/.gitignore_global
	editor = subl -n -w

[diff]
	tool = p4mergetool
[difftool "p4mergetool"]
  cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $LOCAL $REMOTE

[merge]
	tool = p4mergetool
[mergetool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$LOCAL $PWD/$REMOTE $PWD/$MERGED
	trustExitCode = false
  keepBackup = false
  keepTemporaries = false
	
